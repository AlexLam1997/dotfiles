[user]
        name = Alexander Lam
        email = alexander.lam@shopify.com
[core]
        commitGraph = true
        editor = vim
[fetch]
	prune = true
[diff]
        algorithm = patience
[gc]
        writeCommitGraph = true
[protocol]
        version = 2
[url "https://github.com/Shopify/"]
        insteadOf = git@github.com:Shopify/
        insteadOf = git@github.com:shopify/
        insteadOf = ssh://git@github.com/Shopify/
        insteadOf = ssh://git@github.com/shopify/
[commit]
	template = "~/.gitmessage"
[rebase]
	autosquash = true
[pull]
        ff = only
[alias]
#cb = git branch -vv | grep ': gone]'|  grep -v "\*" | awk '{ print $1; }' | xargs git branch -d
lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
lg = !"git lg1"
fdiff = diff-tree --no-commit-id --name-only -r
ign = update-index --assume-unchanged
nign = update-index --no-assume-unchanged
